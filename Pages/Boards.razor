@page "/boards"
@using HPWUHexingTrainer

<h3>Boards</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Foes</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < testboards.Count; i++)
        {
            var local_i = i;
            var board = testboards[i];
            <tr>
                <td>
                    <div>@board.Name</div>
                    <a href="test/@local_i" class="btn btn-outline-primary" role="button">Solve</a>
                </td>
                <td>
                    @foreach (var foe in board.Foes)
                    {
                        <div>
                            <span style="background-color: @(@foe.Elite ? "plum" : "white")">
                                @foe.ToString()
                            </span>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



@code {
    private List<TestBoard> testboards = GenerateTestBoards.Create();
}


