@page "/usergenerated"

<ModalBootstrap @ref="modal1" OnClick="ClickHandler" Title="Add a foe">
    <div class="row">
        <div class="col">
            Stars <input @bind="_star" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label class="pt-1" for="chkElite">Elite?</label>
            <input id="chkElite" type="checkbox" @bind="_isElite" />
        </div>
    </div>

</ModalBootstrap>
<button class="btn btn-outline-primary" @onclick="OpenModal">Add</button>

star @_star
Elite @_isElite;

<div class="row pt-2">
    <div class="col">
        <LobbyDetails @ref="_bd"></LobbyDetails>
    </div>
</div>


@code {
    //List<Foe> _foes = new List<Foe>();
    int? _star;
    bool _isElite = false;

    ModalBootstrap modal1;

    LobbyDetails _bd = new LobbyDetails();



    void OpenModal()
    {
        _star = null;
        _isElite = false;
        modal1.Show();
    }



    void ClickHandler(string newMessage)
    {
        modal1.Show();

        Foe f = new Foe();

        if (_star.HasValue)
            f.Stars = _star.Value;

        f.Elite = _isElite;

        _bd.Foes.Add(f);
        _bd.Refresh();
    }

}
