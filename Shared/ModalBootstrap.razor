

@if (_show)
{
    <div class="modal fade show" id="myModal" style=" display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Title</h4>
                    @*<button type="button" class="close" data-dismiss="modal" @onclick="Show">My button</button>*@

                </div>
                <div class="modal-body">
                    @ChildContent

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" @onclick="@(() => OnClick.InvokeAsync("Hello from ChildComponent"))">Save</button>
                </div>

            </div>

        </div>

    </div>
    <div class="modal-backdrop fade show"></div>
}


@code {
    private Boolean _show { get; set; }
    private Foe foe = new Foe();

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    public void Show()
    {
        _show = !_show;
    }
}
